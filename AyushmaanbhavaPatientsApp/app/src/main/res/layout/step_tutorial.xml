    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/view_padding">

    <TextView
        android:id="@+id/blood_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Group Type"
        android:textSize="@dimen/add_edit_textsize"/>
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/android_material_design_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_floatingLabel="normal" />
        </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/view_padding">

        <TextView
            android:id="@+id/text_view_nation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nationality"
            android:textSize="@dimen/add_edit_textsize"
            android:paddingRight="25dp"/>
        <RadioGroup
            android:id="@+id/radio_nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="25dp">


            <RadioButton
                android:id="@+id/radio_indian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indian"
                android:textSize="@dimen/add_edit_textsize"/>

            <RadioButton
                android:layout_marginLeft="15dp"
                android:id="@+id/radio_notindian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NRI"
                android:textSize="@dimen/add_edit_textsize"/>

        </RadioGroup>
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/fadhaarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp">

        <EditText
            android:maxLength="14"
            android:inputType="number"
            android:id="@+id/fadhaar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Adaar Card Number"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fPassportLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp">

        <EditText
            android:id="@+id/fPassport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Passport Number"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:layout_width="fill_parent"
            android:hint="Adhaar/Passport Image"
            android:id="@+id/img_hint"
            android:inputType="textEmailAddress"
            android:textColor="#47a447" />
        <ImageButton
            style="?android:buttonBarButtonStyle"
            android:src="@mipmap/ic_credit_card_white_24dp"
            android:id="@+id/do_email_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#47a447" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:layout_width="fill_parent"
            android:hint="Select Profile Image"
            android:id="@+id/user_hint"
            android:inputType="textEmailAddress"
            android:textColor="#47a447" />
        <ImageButton
            style="?android:buttonBarButtonStyle"
            android:src="@mipmap/ic_perm_identity_white_24dp"
            android:id="@+id/do_img_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#47a447" />

    </LinearLayout>
    <EditText
        android:id="@+id/note"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Notes/Comments"
        android:inputType="textMultiLine"
    android:lines="8"
    android:minLines="6"
    android:gravity="top|left"
    android:maxLines="10"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:scrollbars="vertical" />
</LinearLayout>
    </ScrollView>