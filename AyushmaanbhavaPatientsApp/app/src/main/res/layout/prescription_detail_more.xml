<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:id="@+id/t1"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_height="wrap_content" >

    <TableRow

        android:layout_marginTop="5dp">

        <TextView

            android:id="@+id/name"
            android:layout_marginStart="20dp"
            android:text="Prescription Date"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:textColor="#180000"
            android:textSize="18sp" />

        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:gravity="left"
            android:layout_marginStart="15dp"
            android:text=":"
            android:textColor="#180000"
            android:textSize="16dp" />


        <TextView
            android:layout_weight="1.0"
            android:width="0dp"
            android:gravity="left"
            android:id="@+id/g_date"
            android:text="Not Defines"
            android:layout_width="0dp"
            android:textColor="#180000"
            android:textSize="18sp" />

    </TableRow>
</TableLayout>

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:textColor="#47a447"
        android:textAlignment="center"
        android:id="@+id/datess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Symtoms" />

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:id="@+id/symtom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symtoms" />

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:textColor="#47a447"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Advise" />

    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:id="@+id/advise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advise" />
    <TextView
        android:textSize="20sp"
        android:textColor="#47a447"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Medicines" />




    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">
                    <TableRow

                        android:padding="0dp">
                        <TextView
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:background="#fff"
                            android:color="#47a447"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#47a447"
                            android:text="Medicine Name" />

                        <TextView
                            android:gravity="left"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:background="#fff"
                            android:textColor="#47a447"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Quantity" />

                    </TableRow>

                    <TableRow

                        android:padding="5dp">
                         <ListView
                             android:layout_gravity="start"
                            android:id="@+id/m_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:transcriptMode="alwaysScroll"/>

                        <ListView
                            android:layout_gravity="center"
                            android:id="@+id/m_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:transcriptMode="alwaysScroll"/>

                    </TableRow>

                </TableLayout>

</LinearLayout>